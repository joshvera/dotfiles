# Emacs
alias e='emacs'
alias emacsclient='/usr/local/Cellar/emacs/HEAD/bin/emacsclient'
alias emacs='emacsclient'

# Git aliases
alias gsb="git submodule "
alias g="git "
alias grc='git rebase --continue'
alias gra='git rebase --abort'
alias gs='git status '
alias gst='git status '
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gcm='git commit -v -m'
alias gca='git commit -v -a'
alias gd='git diff --color'
alias go='git checkout'
alias gl='git log'
alias gv='git status | pru  --reduce '"'"'select {|s| s.match(/#\s+modified:.+/) }.map {|s| s.gsub(/#\s+modified:\s+/, "") }.first'"' | xargs vim"
alias got='git '
alias get='git '

# Ruby
alias sporkify='bundle exec spork cucumber & bundle exec spork'

# Vim
alias vim="mvim -v"

# Rbenv
eval "$(rbenv init -)"

# Node
export NODE_PATH=/usr/local/lib/node_modules
