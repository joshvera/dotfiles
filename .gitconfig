[user]
    name = Josh Vera
    email = josh@joshvera.com
[core]
    autocrlf = input
    quotepath = false
    editor = "mvim -v"
    excludesfile = ~/.globalgitignore
    fsyncobjectfiles = true
    preloadindex = true
    whitespace = blank-at-eol,space-before-tab,-blank-at-eof,tabwidth=4
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    revision = !echo `git describe` | sed -n -e \"s/-/ /g\"
    id = !echo `git log -n 1 --pretty=%H` | pbcopy
    staged = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    patches = log -p --reverse
    sup = submodule update --init --recursive
	wtf = blame
	bg = branch
	fg = checkout
	rba = rebase --abort
	rbc = rebase --continue
[color]
    diff = auto
    status = auto
    branch = auto
	whitespace = trailing-space,space-before-tab
[diff]
    renames = copies
    mnemonicprefix = true
[status]
    submodulesummary = true
[branch]
	autosetuprebase = always
[branch "master"]
    mergeoptions = --no-ff --no-commit
[push]
    default = upstream
[merge]
	stat = true
[rebase]
    stat = true
[pack]
    windowMemory = 1g
[advice]
    pushNonFastForward = false
    statusHints = false
