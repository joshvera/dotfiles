[user]
    name = Josh Vera
    email = vera@github.com
[core]
    autocrlf = input
    quotepath = false
    editor = vim
    excludesfile = ~/.gitignore
    fsyncobjectfiles = true
    preloadindex = true
    whitespace = blank-at-eol,space-before-tab,-blank-at-eof,tabwidth=4
    pager = less -x4
[alias]
    sup = submodule update --init --recursive
    annihilate = reset --hard origin/master
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    revision = !echo `git describe` | sed -n -e \"s/-/ /g\"
    id = !echo `git log -n 1 --pretty=%H` | pbcopy
    staged = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    patches = log -p --reverse
    sup = submodule update --init --recursive
    wtf = blame
    bg = branch
    fg = checkout
    rba = rebase --abort
    rbc = rebase --continue
[color]
    ui = auto
    whitespace = trailing-space,space-before-tab,strip
[diff]
    renames = copies
[status]
    submodulesummary = true
[branch]
    autosetuprebase = always
[branch "master"]
    rebase = true
[push]
	default = simple
[merge]
    stat = true
    ff = false
    tool = fugitive
[rebase]
    stat = true
[pack]
    windowMemory = 1g
[advice]
    pushNonFastForward = false
    statusHints = false
[mergetool "fugitive"]
    cmd = mvim -f -c \"Gdiff\" \"$MERGED\"
[github]
    user = joshvera
[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[universe]

